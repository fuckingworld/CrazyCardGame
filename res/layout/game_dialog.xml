<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mm_layout"
    android:layout_width="400dip"
    android:layout_height="wrap_content" >

    <TableLayout
        android:id="@+id/mainlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <TableRow>

            <LinearLayout
                android:id="@+id/showmsg_layout"
                android:layout_width="280dp"
                android:layout_height="170dp"
                android:background="@drawable/photo_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/common_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="55dp"
                    android:gravity="center"
                    android:text="恭喜您，等级达到150，不滞于物，草木竹石均可为剑，渐进于无剑胜有剑之境。（获得15000金豆，抽奖券15张）"
                    android:textColor="#c2811a"
                    android:textSize="14sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-55dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/common_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/ok_btn_bg"
                    android:textSize="14sp" />
 
                <Button
                    android:id="@+id/common_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/common_ok"
                    android:background="@drawable/cancel_btn_bg"
                    android:textSize="14sp" />
                <!-- android:text="@string/dialog_cancell2" -->

            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainlayout"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_unit_id_banner" >
    </com.google.android.gms.ads.AdView>

</RelativeLayout>